{
  "name": "ebook-launcher",
  "version": "1.0.0",
  "description": "Protected E-book Launcher with Encryption",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --exec electron .",
    "encrypt-flipbook": "node scripts/encrypt-flipbook.js encrypt",
    "test-encryption": "node scripts/encrypt-flipbook.js test",
    "build": "npm run encrypt-flipbook && electron-builder",
    "build-encrypted": "npm run encrypt-flipbook && electron-builder",
    "build-win": "npm run encrypt-flipbook && electron-builder --win",
    "build-mac": "npm run encrypt-flipbook && electron-builder --mac",
    "build-linux": "npm run encrypt-flipbook && electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "test": "echo \"No tests specified\""
  },
  "build": {
    "appId": "com.ebook.launcher.secure",
    "productName": "E-book Launcher Secure",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!assets/flipbook/**/*",
      "!node_modules/.cache/**/*",
      "node_modules/crypto-js/**/*",
      "node_modules/uuid/**/*",
      "node_modules/node-machine-id/**/*",
      "node_modules/systeminformation/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/flipbook-encrypted",
        "to": "flipbook-encrypted",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "build/icons/icon.ico",
      "compression": "maximum"
    },
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "icon": "build/icons/icon.icns",
      "compression": "maximum"
    },
    "linux": {
      "target": {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      },
      "icon": "build/icons/icon.png",
      "compression": "maximum"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/icons/icon.ico",
      "uninstallerIcon": "build/icons/icon.ico"
    },
    "compression": "maximum"
  },
  "keywords": [
    "ebook",
    "launcher",
    "electron",
    "protected",
    "encrypted"
  ],
  "author": "Ardiman",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "crypto-js": "^4.2.0",
    "uuid": "^9.0.1",
    "node-machine-id": "^1.1.12",
    "systeminformation": "^5.21.8"
  }
}
